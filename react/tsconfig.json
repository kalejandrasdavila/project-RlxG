{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./react/typings"
    ],
    "module": "esnext"
  },
  "include": [
    "./**/*"
  ]
}