{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./react/typings",
      "./typings"
    ],
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node",
      "jquery"
    ],
    "module": "esnext",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}